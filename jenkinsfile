pipeline{
    agent any

    stages{
        stage("build"){
            steps{
                    withCredentials([usernamePassword(credentialsId:'docker-repo' , usernameVariable:'user' , passwordVariable:'pass')]){
                        sh " docker login -u $user -p $pass "
                    }
                        
                    
                    sh " bash arg.sh"
            }
        }
        stage("test"){
            steps{
                sh "docker images"
            }
        }
    }
}
